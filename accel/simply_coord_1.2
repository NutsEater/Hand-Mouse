float KalmanX(float val)
{
  PcX = PX + varProcess;
  GX = PcX/(PcX + varVolt);
  PX = (1-GX)*PcX;
  XpX = XeX;
  ZpX = XpX;
  XeX = GX*(val-ZpX)+XpX; // "фильтрованное" значение
  return(XeX);
}
float KalmanY(float val)
{
  PcY = PY + varProcess;
  GY = PcY/(PcY + varVolt);
  PY = (1-GY)*PcY;
  XpY = XeY;
  ZpY = XpY;
  XeY = GY*(val-ZpY)+XpY; // "фильтрованное" значение
  return(XeY);
}



float Kalman(float val)
{
  float Pc = 0.0;
  float G = 0.0;
  float P = 1.0;
  float Xp = 0.0;
  float Zp = 0.0;
  float Xe = 0.0;

  Pc = P + varProcess;
  G = Pc/(Pc + varVolt);
  P = (1-G)*Pc;
  Xp = Xe;
  Zp = Xp;
  Xe = G*(val-Zp)+Xp; // "фильтрованное" значение
  return(Xe);
}
