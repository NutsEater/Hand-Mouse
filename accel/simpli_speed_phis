#include "I2Cdev.h"
#include "MPU6050.h"

#if I2CDEV_IMPLEMENTATION == I2CDEV_ARDUINO_WIRE
    #include "Wire.h"
#endif

MPU6050 accelgyro;

int16_t ax, ay, az, accx;
int16_t gx, gy, gz;

float AccX, AccY;
float FAccX[2]={0.0, 0.0}, FAccY;
float SpX[2]={0.0, 0.0}, SpY;
float RouteX, RouteY;
int Akol=0, Skol=0;

float varVolt = 0.3;  // среднее отклонение 
float varProcess = 0.001; // скорость реакции на изменение 
float Pc = 0.0;
float G = 0.0;
float P = 1.0;
float Xp = 0.0;
float Zp = 0.0;
float Xe = 0.0;

#define OUTPUT_READABLE_ACCELGYRO

#define LED_PIN 13
bool blinkState = false;
float IntRect (float a, float b);//интегрирование методам прямоугольников (парамтры - границы интегрирования)

void setup() {
    #if I2CDEV_IMPLEMENTATION == I2CDEV_ARDUINO_WIRE
        Wire.begin();
    #elif I2CDEV_IMPLEMENTATION == I2CDEV_BUILTIN_FASTWIRE
        Fastwire::setup(400, true);
    #endif

    Serial.begin(38400);

    Serial.println("Initializing I2C devices...");
    accelgyro.initialize();

    // verify connection
    Serial.println("Testing device connections...");
    Serial.println(accelgyro.testConnection() ? "MPU6050 connection successful" : "MPU6050 connection failed");    
    Serial.println("Updating internal sensor offsets...");

    // configure Arduino LED pin for output
    pinMode(LED_PIN, OUTPUT);
}

void loop() {
    

  //delay(1000);
    
    accelgyro.getMotion6(&ax, &ay, &az, &gx, &gy, &gz);///!!
    
    #ifdef OUTPUT_BINARY_ACCELGYRO
        Serial.write((uint8_t)(ax >> 8)); Serial.write((uint8_t)(ax & 0xFF));
        Serial.write((uint8_t)(ay >> 8)); Serial.write((uint8_t)(ay & 0xFF));
    #endif
    
    AccX=(9.81*(ax)*2)/32767;
    FAccX[1]=Kalman(AccX);
    
    //if(Skol==7){
     if (Akol==2){//берём показания аксилерометра через пять единиц, чтоб отрезок интегртрования был шире
       SpX[1]=IntRect(FAccX[0],FAccX[1]);
       Akol=0;
     }
      if (Akol==0){
        FAccX[0]=FAccX[1];
      }
      Akol++;
     // Skol=0;
    //}
    //if(Skol==0){
    RouteX+=IntRect(SpX[0],SpX[1]);
     SpX[0]=SpX[1]; 
    //}
    //Skol++;
    
    //AccY=(9.81*(ay)*2)/32767;
    //FAccY=Kalman(AccY);
    
    //if (AccX<0)//Надо подумать над отрицательной скоростью
    //  SpX*=-1;
    
    //Serial.print(SpX); Serial.print("\t");
    Serial.print(RouteX); Serial.print("\n");
      
    
    // blink LED to indicate activity
    blinkState = !blinkState;
    digitalWrite(LED_PIN, blinkState);
    delay(10);
}

float Kalman(float val)
{
  Pc = P + varProcess;
  G = Pc/(Pc + varVolt);
  P = (1-G)*Pc;
  Xp = Xe;
  Zp = Xp;
  Xe = G*(val-Zp)+Xp; // "фильтрованное" значение
  return(Xe);
}
//
float IntRect (float a, float b)//a,b-отрезок интегрирования
{
  float Integral;
  float h=0.009;//h - шаг интегррования 
  float n=(b-a)/h;
  
  for (int16_t i=1;i<=n;i++)
    Integral+=h*abs(sin(a+h*(i-0.5)));
  return Integral;
}
